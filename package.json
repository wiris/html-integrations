{
  "name": "@wiris/html-integrations",
  "private": true,
  "homepage": "https://www.wiris.com/?utm_source=npmjs&utm_medium=referral",
  "bugs": {
    "email": "support@wiris.com"
  },
  "scripts": {
    "start": "lerna bootstrap",
    "poststart": "lerna run compile -- npm",
    "premoodle": "npm run clean && shx rm -rf output && lerna bootstrap",
    "postmoodle": "shx cp output/moodle-tinymce4/plugin.min.moodle.js packages/mathtype-tinymce4/plugin.min.moodle.js",
    "moodle": "lerna run compile -- moodle",
    "clean": "shx rm -rf output && lerna run clean",
    "clean-all": "npm run clean && shx rm -rf node_modules 'packages/*/node_modules' 'demos/**/*/node_modules'",
    "test-old": "node scripts/services/executeTests.js",
    "test": "docker run -it -v $PWD:/cypress --net=host -v /tmp/.X11-unix:/tmp/.X11-unix -w /cypress -e DISPLAY=$IP:0 --entrypoint=cypress cypress/included:7.5.0 open --project .",
    "test:ci": "docker run -v $PWD:/cypress --net=host -w /cypress -e CYPRESS_PROJECT_ID --entrypoint=cypress cypress/included:7.5.0 run  --project .",
    "build": "cd demos/html5/generic && npm install && npm start &",
    "lint": "npm run lint-js && npm run lint-html && npm run lint-css",
    "lint-js": "eslint ${npm_config_route-.} --ext .js",
    "lint-html": "html-validate ${npm_config_route-.}",
    "lint-css": "stylelint \"${npm_config_route-**/*.css}\"",
    "build-jsdoc-validation": "link-checker packages/mathtype-html-integration-devkit/out/"
  },
  "devDependencies": {
    "@nrwl/tao": "13.7.3",
    "@nrwl/cli": "13.7.3",
    "@nrwl/workspace": "13.7.3",
    "@types/node": "16.11.7",
    "typescript": "~4.5.2"
  },
  "license": "MIT",
  "author": "WIRIS Team (https://www.wiris.com)",
  "workspaces": [
    "packages/**"
  ]
}
